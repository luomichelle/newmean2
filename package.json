{
  "name": "angular2-mean-starter",
  "version": "0.0.9",
  "description": "A very neat and simple starter kit for an angular2 MEAN app.",
  "main": "server.js",
  "repository": "https://github.com/giacomocerquone/angular2-mean-starter.git",
  "scripts": {
    "start": "concurrently \"nodemon server.js\" \"npm run watch:ts\" \"npm run browsersync\"",
    "build": "concurrently \"npm run build:by\" \"npm run build:less\" \"npm run build:ts\"",
    "build:less": "lessc --clean-css public/assets/less/styles.less public/assets/css/styles.css",
    "watch:less": "less-watch-compiler public/assets/less/ public/assets/css/styles.less",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "postinstall": "typings install",
    "browsersync": "browser-sync start --files \"public/*.*\" --proxy 127.0.0.1:8080 --reload-delay=300 --reload-debounce=500"
  },
  "author": "Giacomo Cerquone <cerquone96@hotmail.it> (http://giacomocerquone.com)",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "2.0.0-rc.4",
    "@angular/compiler": "2.0.0-rc.4",
    "@angular/core": "2.0.0-rc.4",
    "@angular/forms": "0.2.0",
    "@angular/http": "2.0.0-rc.4",
    "@angular/platform-browser": "2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "2.0.0-rc.4",
    "@angular/router": "3.0.0-beta.1",
    "@angular/router-deprecated": "2.0.0-rc.2",
    "core-js": "2.2.2",
    "es6-shim": "0.35.0",
    "reflect-metadata": "0.1.3",
    "rxjs": "5.0.0-beta.6",
    "systemjs": "0.19.6",
    "zone.js": "^0.6.12",
    "angular2-in-memory-web-api": "0.0.11",
    "body-parser": "^1.15.0",
    "express": "^4.13.4",
    "mongoose": "^4.4.8"
  },
  "devDependencies": {
    "browser-sync": "^2.12.5",
    "concurrently": "^2.0.0",
    "less": "^2.6.1",
    "less-plugin-clean-css": "^1.5.1",
    "less-watch-compiler": "^1.2.2",
    "morgan": "^1.7.0",
    "nodemon": "^1.9.1",
    "typescript": "^1.8.9",
    "typings": "^1.3.1",
    "watchify": "^3.7.0"
  }
}
